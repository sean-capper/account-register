<% include partials/header %>

<h1>Create Account</h1>
<div class="container">
    <form id="account" method="POST" action="/user/register">
        <input class="input-field" type="text" placeholder="Username" name="username">
        <br>
        <input class="input-field" type="password" placeholder="Password" name="password">
        <br>
        <input class="submit-btn" id='submit' type="submit" value="Create Account">
    </form>
    <% if(errors) { %>
        <% errors.forEach( (error) => { %>
            <p class='error'> <%= error.msg %></p>
        <% }) %>
    <% } %>
    <a class="link-btn" href="../">Already have an account? Sign in!</a>
</div>

<script src='js/register.js' type='text/html'></script>
<% include partials/footer %>